<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Account Info">

        <EditTextPreference
            app:dialogTitle="@string/edit_email"
            app:key="edit_email"
            app:persistent="true"
            app:title="@string/email_address"
            />

        <EditTextPreference
            app:dialogTitle="@string/edit_password"
            app:key="edit_password"
            app:persistent="true"
            app:title="@string/password"
            />


    </PreferenceCategory>

</PreferenceScreen>