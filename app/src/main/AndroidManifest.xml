<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.units.businesscardwallet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BusinessCardWallet">
        <activity
            android:name=".activities.SettingsActivity"
            android:exported="true"
            android:label="@string/title_activity_settings"
        />
        <activity
            android:name=".activities.ContactInfoActivity"
            android:exported="true"
            android:label="@string/title_activity_contact_info" />

        <activity
            android:name=".activities.AnyOrientationCaptureActivity"
            android:exported="true" />
        <activity
            android:name=".activities.CustomScannerActivity"
            android:exported="true"
            android:hardwareAccelerated="true"/> <!-- TODO check if hardware acceleration is really needed for scan -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:hardwareAccelerated="true"> <!-- TODO check if hardware acceleration is really needed for scan -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>